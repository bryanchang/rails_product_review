<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
	<b>Reviews:</b>
	<ul>
	<% @reviews.each do |review|%>
		<li><blockquote><%= review.body %></blockquote></li>
	<% end %>
	</ul>
</p>

<a href="/reviews/new?product_id=<%=@product.id%>"> Write a new review</a> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
